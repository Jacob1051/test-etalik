{% extends 'base.html.twig' %}

{% block title %}Import Excel{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/dt/jq-3.2.1/dt-1.10.16/datatables.min.css"/>
{% endblock %}

{% block body %}
    <div class="container-fluid">
        {{ form_start(importExcelForm) }}

        <div class="input-group p-5">
            {{ form_widget(importExcelForm.file, { 'attr': {'accept': '.xlsx, .xls'} }) }}
            <button class="btn btn-secondary" type="submit" id="inputGroupFileAddon04">Importer</button>
        </div>

        <div class="my-custom-class-for-errors">
            {{ form_errors(importExcelForm) }}
        </div>

        {{ form_end(importExcelForm) }}

        <div class="table-container table-responsive" style="height: calc(100vh - 250px);">
            <table class="table table-hover my-1 fixed-thead" id="dt-vehicle" data-edit-url="test" data-delete-url="{{ path('app_data_delete', {id: 'id'}) }}">
                <thead>
                <tr>
                    <th scope="col">ID</th>
                    {% for title in colTitle %}
                        <th scope="col">{{ title }}</th>
                    {% endfor %}
                    <th scope="col" class="text-center">Actions</th>
                </tr>
                </thead>
                <tbody class="align-middle table-salary">
                </tbody>
                <tfoot>
                <tr>
                    <th colspan="35">
                        <nav id="datatablePagination">
                            <div class="dataTables_paginate paging_simple_numbers"
                                 id="dt-vehicle_custom_datatable_paginate">
                            </div>
                        </nav>
                    </th>
                </tr>
                </tfoot>
            </table>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('datatable') }}
{% endblock %}


